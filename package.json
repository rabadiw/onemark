{
  "name": "onemark",
  "version": "1.0.1",
  "description": "Onemark all your internet bookmarks to track and manage outside of the browser",
  "main": "app/main.js",
  "author": {
    "name": "Wael Rabadi",
    "url": "https://github.com/rabadiw/onemark"
  },
  "license": "Apache-2.0",
  "private": true,
  "homepage": "https://github.com/rabadiw/onemark#readme",
  "bugs": {
    "url": "https://github.com/rabadiw/onemark/issues"
  },
  "build": {
    "appId": "com.rabadiw.onemark",
    "productName": "Onemark",
    "category": "public.app-category.productivity",
    "win": {
      "iconUrl": "https://raw.githubusercontent.com/rabadiw/onemark/develop/build/icon.ico",
      "target": "nsis"
    },
    "nsis": {
      "oneClick": true,
      "artifactName": "${productName}-Setup-${version}-${arch}.${ext}",
      "unicode": true
    },
    "publish": [
      {
        "provider": "github",
        "owner": "rabadiw",
        "repo": "onemark"
      }
    ]
  },
  "devDependencies": {
    "@types/node": "7.0.5",
    "@types/express": "4.0.35",
    "electron": "1.6.1",
    "electron-builder": "14.5.3",
    "electron-packager": "8.5.2",
    "eslint": "3.16.1",
    "typescript": "2.2.1"
  },
  "devEngines": {
    "node": ">=6.x",
    "npm": ">=3.x"
  },
  "scripts": {
    "build:api": "tsc -p ./src-api",
    "postinstall": "install-app-deps",
    "start": "electron ./app --dev",
    "start:api": "electron ./app --dev --run-api",
    "pack": "build --dir --win --x64",
    "dist": "build",
    "release": "build --publish always"
  }
}