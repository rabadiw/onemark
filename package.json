{
  "name": "onemark",
  "description": "Onemark all your internet bookmarks to track and manage outside of the browser",
  "main": "app/main.js",
  "author": {
    "name": "Wael Rabadi",
    "url": "https://github.com/rabadiw/onemark"
  },
  "license": "Apache-2.0",
  "private": true,
  "homepage": "https://github.com/rabadiw/onemark#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/rabadiw/onemark.git"
  },
  "bugs": {
    "url": "https://github.com/rabadiw/onemark/issues"
  },
  "build": {
    "appId": "com.rabadiw.onemark",
    "productName": "Onemark",
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": true,
      "artifactName": "${productName}-Setup-${version}-${arch}.${ext}",
      "unicode": true,
      "perMachine": false
    },
    "publish": {
      "provider": "github"
    },
    "extraFiles": [
      {
        "from": "build/manifest-nmh.json",
        "to": "manifest-nmh.json"
      },
      {
        "from": "build/nmh",
        "to": "nmh"
      }
    ],
    "asarUnpack": [
      ".env"
    ]
  },
  "devDependencies": {
    "@types/body-parser": "1.16.7",
    "@types/electron": "1.6.10",
    "@types/node": "8.0.47",
    "body-parser": "1.18.2",
    "electron": "1.7.9",
    "electron-builder": "19.42.2",
    "electron-builder-squirrel-windows": "19.42.0",
    "electron-packager": "9.1.0",
    "eslint": "4.10.0",
    "express": "4.16.2",
    "firebase": "4.6.0",
    "firebase-tools": "3.13.1",
    "fs-extra": "4.0.2",
    "npm-run-all": "4.1.1",
    "rxjs": "5.5.2",
    "typescript": "2.5.3"
  },
  "devEngines": {
    "node": ">=6.x",
    "npm": ">=3.x"
  },
  "scripts": {
    "postinstall": "install-app-deps",
    "build:api": "tsc -p ./src-api",
    "build:client": "node client-build.js",
    "preapi": "yarn run build:api",
    "api": "electron ./app --start=api --env=./src-api/.env",
    "preapp": "yarn run build:client",
    "app": "electron ./app --env=./src-api/.env",
    "firebase": "firebase serve",
    "client-server": "node ./src-client/client-server.js --env=./src-api/.env",
    "client-web": "node client-startup.js",
    "client": "npm-run-all --parallel api client-web",
    "dev": "npm-run-all --parallel api client-web app",
    "start": "npm-run-all --parallel api app",
    "pack": "build --dir --win --x64",
    "dist": "build",
    "prerelease": "yarn run build:client",
    "release": "build --publish always"
  },
  "dependencies": {
    "yarn": "^1.2.1"
  }
}
