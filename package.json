{
  "name": "onemark",
  "version": "1.0.6-alpha",
  "description": "Onemark all your internet bookmarks to track and manage outside of the browser",
  "main": "app/main.js",
  "author": {
    "name": "Wael Rabadi",
    "url": "https://github.com/rabadiw/onemark"
  },
  "license": "Apache-2.0",
  "private": true,
  "homepage": "https://github.com/rabadiw/onemark#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/rabadiw/onemark.git"
  },
  "bugs": {
    "url": "https://github.com/rabadiw/onemark/issues"
  },
  "build": {
    "appId": "com.rabadiw.onemark",
    "productName": "Onemark",
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": true,
      "artifactName": "${productName}-Setup-${version}-${arch}.${ext}",
      "unicode": true,
      "perMachine": false
    },
    "publish": {
      "provider": "github"
    },
    "extraFiles": [
      {
        "from": "build/manifest-nmh.json",
        "to": "manifest-nmh.json"
      },
      {
        "from": "build/nmh",
        "to": "nmh"
      }
    ],
    "asarUnpack": [
      ".env"
    ]
  },
  "devDependencies": {
    "@types/node": "7.0.23",
    "@types/express": "4.0.35",
    "@types/body-parser": "1.16.3",
    "electron": "1.6.10",
    "electron-builder": "18.3.5",
    "electron-builder-squirrel-windows": "18.3.0",
    "electron-packager": "8.7.0",
    "eslint": "3.19.0",
    "typescript": "2.3.4",
    "rxjs": "5.4.0"
  },
  "devEngines": {
    "node": ">=6.x",
    "npm": ">=3.x"
  },
  "scripts": {
    "build:api": "tsc -p ./src-api",
    "postinstall": "install-app-deps",
    "start": "electron ./app --dev",
    "start:api": "electron ./app --start=api --env=./src-api/.env",
    "start:api2": "electron ./app --start=api",
    "pack": "build --dir --win --x64",
    "dist": "build",
    "release": "build --publish always"
  }
}
