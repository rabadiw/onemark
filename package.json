{
  "name": "onemark",
  "description": "Onemark is a productivity tool to manage all your links outside of the browser",
  "main": "app/main.js",
  "author": {
    "name": "Wael Rabadi",
    "url": "https://github.com/rabadiw/onemark"
  },
  "license": "Apache-2.0",
  "private": true,
  "homepage": "https://github.com/rabadiw/onemark#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/rabadiw/onemark.git"
  },
  "bugs": {
    "url": "https://github.com/rabadiw/onemark/issues"
  },
  "build": {
    "appId": "com.rabadiw.onemark",
    "productName": "Onemark",
    "mac": {
      "category": "public.app-category.productivity",
      "target": "default",
      "extraFiles": [
        {
          "from": "build/nmh/onemark_darwin",
          "to": "nmh/onemark_darwin"
        },
        {
          "from": "build/config.sh",
          "to": "config.sh"
        },
        {
          "from": "build/unconfig.sh",
          "to": "unconfig.sh"
        },
        {
          "from": "build/com.waelrabadi.onemark.plist",
          "to": "com.waelrabadi.onemark.plist"
        }
      ]
    },
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "category": "Office",
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": "nsis",
      "extraFiles": [
        {
          "from": "build/nmh/onemark_win64.exe",
          "to": "nmh/onemark_win64.exe"
        }
      ]
    },
    "nsis": {
      "oneClick": true,
      "artifactName": "${productName}-Setup-${version}-${arch}.${ext}",
      "unicode": true,
      "perMachine": false
    },
    "publish": {
      "provider": "github"
    },
    "extraFiles": [
      {
        "from": "build/com.waelrabadi.onemark.json",
        "to": "com.waelrabadi.onemark.json"
      },
      {
        "from": "build/nmh/.env",
        "to": "nmh/.env"
      }
    ],
    "asarUnpack": [
      ".env"
    ]
  },
  "devDependencies": {
    "@types/body-parser": "1.17.0",
    "@types/electron": "1.6.10",
    "@types/node": "10.3.3",
    "body-parser": "1.18.3",
    "electron": "2.0.2",
    "electron-builder": "20.15.1",
    "electron-builder-squirrel-windows": "20.15.0",
    "electron-packager": "12.1.0",
    "eslint": "4.19.1",
    "express": "4.16.3",
    "firebase": "5.0.4",
    "firebase-tools": "3.18.6",
    "fs-extra": "6.0.1",
    "jest": "23.1.0",
    "npm-run-all": "4.1.3",
    "rxjs": "6.2.1",
    "typescript": "2.9.2"
  },
  "devEngines": {
    "node": ">=7.x",
    "npm": ">=3.x"
  },
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "firebase": "firebase serve",
    "api:build": "node api-build.js",
    "api:start": "electron ./app --start=api --env=./src-api/.env",
    "api": "npm-run-all api:build api:start",
    "client:build": "node client-build.js",
    "client-server": "node ./src-client/client-server.js --env=./src-api/.env",
    "client-web": "node client-startup.js",
    "client": "npm-run-all --parallel api client-web",
    "dev": "npm-run-all --parallel api client-web app",
    "preapp": "npm-run-all api:build client:build",
    "app": "electron ./app --env=./src-api/.env",
    "start": "npm-run-all --parallel api app",
    "test": "jest",
    "pack": "build --dir",
    "dist": "build",
    "prerelease": "npm run client:build",
    "release": "build --publish always"
  },
  "dependencies": {
    "src-client": "file:src-client"
  }
}
