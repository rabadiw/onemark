{
  "name": "onemark",
  "description": "Onemark all your internet bookmarks to track and manage outside of the browser",
  "main": "app/main.js",
  "author": {
    "name": "Wael Rabadi",
    "url": "https://github.com/rabadiw/onemark"
  },
  "license": "Apache-2.0",
  "private": true,
  "homepage": "https://github.com/rabadiw/onemark#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/rabadiw/onemark.git"
  },
  "bugs": {
    "url": "https://github.com/rabadiw/onemark/issues"
  },
  "build": {
    "appId": "com.rabadiw.onemark",
    "productName": "Onemark",
    "mac": {
      "category": "public.app-category.productivity",
      "target": "default",
      "extraFiles": [
        {
          "from": "build/nmh/onemark_darwin",
          "to": "nmh/onemark_darwin"
        },
        {
          "from": "build/config.sh",
          "to": "config.sh"
        },
        {
          "from": "build/com.waelrabadi.onemark.plist",
          "to": "com.waelrabadi.onemark.plist"
        }
      ]
    },
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "category": "Office",
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": "nsis",
      "extraFiles": [
        {
          "from": "build/nmh/onemark_win64.exe",
          "to": "nmh/onemark_win64.exe"
        }
      ]
    },
    "nsis": {
      "oneClick": true,
      "artifactName": "${productName}-Setup-${version}-${arch}.${ext}",
      "unicode": true,
      "perMachine": false
    },
    "publish": {
      "provider": "github"
    },
    "extraFiles": [
      {
        "from": "build/com.waelrabadi.onemark.json",
        "to": "com.waelrabadi.onemark.json"
      },
      {
        "from": "build/nmh/.env",
        "to": "nmh/.env"
      }
    ],
    "asarUnpack": [
      ".env"
    ]
  },
  "devDependencies": {
    "@types/body-parser": "1.16.8",
    "@types/electron": "1.6.10",
    "@types/node": "9.6.2",
    "body-parser": "1.18.2",
    "electron": "1.8.4",
    "electron-builder": "20.8.1",
    "electron-builder-squirrel-windows": "20.8.0",
    "electron-packager": "12.0.0",
    "eslint": "4.19.1",
    "express": "4.16.3",
    "firebase": "4.12.1",
    "firebase-tools": "3.18.2",
    "fs-extra": "5.0.0",
    "jest": "22.4.3",
    "npm-run-all": "4.1.2",
    "rxjs": "5.5.8",
    "typescript": "2.8.1"
  },
  "devEngines": {
    "node": ">=7.x",
    "npm": ">=3.x"
  },
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "postapi:build": "cp -r ./src-api/public/ ./app/ && npm install",
    "api:build": "tsc -p ./src-api",
    "preapi": "yarn run api:build",
    "api": "electron ./app --start=api --env=./src-api/.env",
    "preapp": "yarn run client:build",
    "app": "electron ./app --env=./src-api/.env",
    "firebase": "firebase serve",
    "client:build": "node client-build.js",
    "client-server": "node ./src-client/client-server.js --env=./src-api/.env",
    "client-web": "node client-startup.js",
    "client": "npm-run-all --parallel api client-web",
    "dev": "npm-run-all --parallel api client-web app",
    "start": "npm-run-all --parallel api app",
    "test": "jest",
    "pack": "build --dir",
    "dist": "build",
    "prerelease": "yarn run build:client",
    "release": "build --publish always"
  },
  "dependencies": {
    "src-client": "file:src-client",
    "yarn": "^1.3.2"
  }
}
